/* pages/detail/index.wxss */
.box{
  width: 100%;
}
.img{
  width: 100%;
  height: 100vw;
}
.dic{
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.price{
  color: red;
  font-size: 50rpx;
  margin: 20rpx 0;
}
.txt{
  font-weight: 600;
}

.dz{
  width: 100%;
  height: 100rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 30rpx;
}
.dz text{
  color: #999;
  margin-right: 20rpx;
}

.btm{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #ccc;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
}
.btm_lef{
  width: 40%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
}
.btm_lef view{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btm_lef image{
  width: 50rpx;
  height: 50rpx;
}
.btm_rig{
  width: 60%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.join{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #ff973a;
  border-radius: 40rpx 0 0 40rpx;
}
.buy{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #f92656;
  border-radius: 0 40rpx 40rpx 0;
}