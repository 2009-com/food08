/* pages/detail/index.wxss */
.search{
  width: 90vw;
  height: 60rpx;
  background: #eee;
  border-radius: 50rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  box-sizing: border-box;
  margin: 0 auto;
}
.saerch{
  width: 30rpx;
  height: 30rpx;
}
.scroll{
  width: 100vw;
  height: 60rpx;
  margin-top: 20rpx;
}
.drink_box{
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.item_drink{
  margin-left: 30rpx;
  white-space: nowrap;
}
.main{
  width: 100vw;
  display: flex;
}
.left{
  width: 140rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.left text{
  width: 100%;
  line-height: 80rpx;
}
.right{
  width: calc( 100% - 140rpx );
  background: red;
}
.rig_drink{
  width: 100%;
  height: 300rpx;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.drinkImg{
  width: 200rpx;
  height: 200rpx;
}
.drink_title{
  width: calc( 100% - 200rpx );
  height: 260rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 10rpx;
}
.bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.price{
  font-size: 28rpx;
  color: #f23030;
}
.addCart{
  width: 50rpx;
  height: 50rpx;
}
