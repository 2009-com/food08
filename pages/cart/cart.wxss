/* pages/cart/cart.wxss */
page{
  background: #eee;
}
.box{
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.item_box{
    width: 90%;
    height: 300rpx;
    background: #fff;
    border-radius: 20rpx;
    padding: 15rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
}
.header{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60rpx;
    /* background: red; */
    font-size: 28rpx
}
.shop_name{
    font-weight: bold;
    height: 60rpx;
    line-height: 60rpx;
}
.selectImg,.shopImg,.you{
    width: 30rpx;
    height: 30rpx;
}
.bottom{
    width: 100%;
    display: flex;
    align-items: center;
}
.drinkImg{
    width: 200rpx;
    height: 200rpx;
}
.delImg,.addImg{
    width: 40rpx;
    height: 40rpx;
}
.item_title{
    width: calc( 100% - 260rpx);
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.title{
    width: 100%;   
}
.price_box{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.cart_box{
    display: flex;
    align-items: center;
}
.num{
    width: 40rpx;
    text-align: center;
}
.footer{
  width: 100vw;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0
}