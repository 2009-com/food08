/* pages/cart/cart.wxss */
page{
  background: #eee;
}
.box{
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.item_box{
    width: 700rpx;
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
}
.selectImg,.shopImg,.you{
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}
.bottom{
    width: 100%;
    display: flex;
    align-items: center;
}
.drinkImg{
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}
.delImg,.addImg{
    width: 40rpx;
    height: 40rpx;
}
.item_title{
    width: calc( 100% - 280rpx);
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.title{
    width: 100%;   
}
.price_box{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.price{
  color: red;
}
.cart_box{
    width: 140rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.num{
    width: 40rpx;
    text-align: center;
}
.footer{
  width: 100vw;
  height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.f_right{
  display: flex;
  align-items: center;
}